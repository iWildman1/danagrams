generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Word {
  id           String            @id @default(cuid())
  originalWord String
  anagram      String
  assignments  DailyAssignment[]
}

model DailyAssignment {
  id     String   @id @default(cuid())
  date   DateTime @unique
  word   Word     @relation(fields: [wordId], references: [id])
  wordId String

  @@index([wordId])
}
